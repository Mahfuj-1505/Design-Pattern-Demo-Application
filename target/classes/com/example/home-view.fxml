<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="480.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.HomeController"
            style="-fx-background-color: linear-gradient(to bottom, #fdfbfb, #ebedee); -fx-padding: 20;">

    <children>

        <!-- Header -->
        <AnchorPane prefHeight="80.0" prefWidth="440.0"
                    layoutX="20.0" layoutY="20.0"
                    style="-fx-background-color: linear-gradient(to right, #0f2027, #203a43, #2c5364);
                           -fx-background-radius: 18 18 0 0;">
            <children>
                <Label layoutX="20.0" layoutY="25.0" text="Welcome to Your Dashboard" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <!-- Main Card with Organized Buttons -->
        <AnchorPane layoutX="20.0" layoutY="100.0" prefHeight="390.0" prefWidth="440.0"
                    style="-fx-background-color: rgba(255,255,255,0.9);
                           -fx-background-radius: 18;
                           -fx-border-radius: 18;
                           -fx-border-color: #dee2e6;
                           -fx-border-width: 1.5;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0.5, 0, 4);">
            <children>

                <!-- Left Column -->
                <Button fx:id="viewProfileButton" layoutX="40.0" layoutY="40.0"
                        onAction="#handleViewProfile" prefWidth="160.0" text="View Profile"
                        style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />

                <Button fx:id="viewProductsButton" layoutX="40.0" layoutY="95.0"
                        onAction="#handleViewProducts" prefWidth="160.0" text="View Products"
                        style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />

                <Button fx:id="ordersButton" layoutX="40.0" layoutY="150.0"
                        onAction="#handleOrders" prefWidth="160.0" text="My Orders"
                        style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />

                <!-- Right Column -->
                <Button fx:id="controlPanelButton" layoutX="240.0" layoutY="40.0"
                        onAction="#handleControlPanel" prefWidth="160.0" text="Control Panel"
                        style="-fx-background-color: linear-gradient(to right, #17a2b8, #117a8b);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />

                <Button fx:id="settingsButton" layoutX="240.0" layoutY="95.0"
                        onAction="#handleSettings" prefWidth="160.0" text="Settings"
                        style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />

                <!-- Logout (full width below both columns) -->
                <Button fx:id="logoutButton" layoutX="120.0" layoutY="230.0"
                        onAction="#handleLogout" prefWidth="200.0" text="Log Out"
                        style="-fx-background-color: linear-gradient(to right, #dc3545, #c82333);
                               -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-cursor: hand;" />
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
