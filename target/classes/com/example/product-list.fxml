<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.ProductListController"
            prefWidth="650" prefHeight="520"
            style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Card-style container -->
    <AnchorPane layoutX="45" layoutY="40" prefWidth="560" prefHeight="420"
                style="-fx-background-color: #fdfdfd;
                       -fx-background-radius: 12;
                       -fx-border-radius: 12;
                       -fx-border-color: #dcdcdc;
                       -fx-border-width: 1.5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0.3, 0, 2);">

        <!-- Stylish Table -->
        <TableView fx:id="productTable"
                   layoutX="10" layoutY="10" prefWidth="540" prefHeight="360"
                   style="-fx-background-color: white;
                          -fx-border-color: transparent;
                          -fx-table-cell-border-color: #e0e0e0;
                          -fx-table-header-border-color: #c8c8c8;
                          -fx-font-size: 14px;
                          -fx-text-fill: #333;
                          -fx-padding: 8;">

            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100"
                             style="-fx-font-weight: bold;" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="280"
                             style="-fx-font-weight: bold;" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="150"
                             style="-fx-font-weight: bold;" />
            </columns>
        </TableView>

        <!-- Message Label -->
        <Label fx:id="messageLabel" layoutX="10" layoutY="380" prefWidth="540"
               style="-fx-text-fill: #dc3545; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </AnchorPane>
</AnchorPane>
