<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.EmployeeDashboardController"
            prefWidth="1920.0" prefHeight="1080.0">

    <!-- 🔝 Top Header Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #27ae60; -fx-padding: 20;">
            <Label text="Employee Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="employeeNameLabel"
                   text="Welcome, Employee"
                   style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-cursor: hand;" />
        </HBox>
    </top>

    <!-- 📚 Sidebar Navigation -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER"
              prefWidth="250"
              style="-fx-background-color: #1abc9c; -fx-padding: 30;">

            <Button text="View Products" onAction="#handleViewProducts"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />

            <Button text="View Orders" onAction="#handleViewOrders"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />

            <Button text="View Customers" onAction="#handleViewCustomers"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />

            <Button text="Restock Product" onAction="#handleRestock"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />

            <Button text="Sell Product" onAction="#handleSell"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />

            <Button text="View Stock" onAction="#handleViewStock"
                    style="-fx-background-color: #16a085; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-pref-width: 200px;
                           -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand;" />
        </VBox>
    </left>

    <!-- 📋 Main Content Area -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #ecf0f1; -fx-padding: 40;"
                   prefWidth="1670" prefHeight="1020">
            <Label text="Select an option from the left menu"
                   style="-fx-font-size: 24px; -fx-text-fill: #7f8c8d;" />
        </StackPane>
    </center>

</BorderPane>
