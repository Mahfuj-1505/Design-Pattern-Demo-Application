<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(to bottom, #fdfbfb, #ebedee); -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AuthController">

    <children>

        <!-- Back Button -->
        <Button layoutX="10" layoutY="10" onAction="#handleBack" style="-fx-background-color: #6c757d;                        -fx-text-fill: white;                        -fx-font-size: 13px;                        -fx-background-radius: 20;                        -fx-cursor: hand;" text="Back" />

        <!-- Login Card -->
        <AnchorPane layoutX="738.0" layoutY="276.0" prefHeight="376.0" prefWidth="460.0" style="-fx-background-color: rgba(255,255,255,0.9);                            -fx-background-radius: 18;                            -fx-border-radius: 18;                            -fx-border-color: #dee2e6;                            -fx-border-width: 1.5;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0.5, 0, 4);">
            <children>

                <!-- Username -->
                <Label layoutX="50.0" layoutY="40.0" style="-fx-text-fill: #495057; -fx-font-size: 13px;" text="Username" />
                <TextField fx:id="emailField" layoutX="50.0" layoutY="60.0" prefHeight="36.0" prefWidth="360.0" promptText="Enter username or email" style="-fx-background-color: #f1f3f5;                                   -fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: #ced4da;                                   -fx-font-size: 13px;                                   -fx-padding: 0 12;" />

                <!-- Password -->
                <Label layoutX="50.0" layoutY="115.0" style="-fx-text-fill: #495057; -fx-font-size: 13px;" text="Password" />
                <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="135.0" prefHeight="36.0" prefWidth="360.0" promptText="Enter Password" style="-fx-background-color: #f1f3f5;                                       -fx-background-radius: 10;                                       -fx-border-radius: 10;                                       -fx-border-color: #ced4da;                                       -fx-font-size: 13px;                                       -fx-padding: 0 12;" />

                <!-- Login Button -->
                <Button layoutX="130.0" layoutY="209.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);                                -fx-text-fill: white;                                -fx-font-size: 15px;                                -fx-background-radius: 20;                                -fx-cursor: hand;                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0.3, 0, 2);" text="Log in" />

                <!-- Go to Home Page Button -->
                <Button layoutX="130.0" layoutY="269.0" mnemonicParsing="false" onAction="#handleGoToDashboardButton" prefHeight="34.0" prefWidth="200.0" style="-fx-background-color: #6c757d;                                -fx-text-fill: white;                                -fx-font-size: 13px;                                -fx-background-radius: 20;                                -fx-cursor: hand;" text="Go to Dashboard" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
