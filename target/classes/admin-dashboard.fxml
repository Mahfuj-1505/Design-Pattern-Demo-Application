<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.AdminDashboardController"
            prefWidth="1920.0" prefHeight="1080.0">

    <!-- 🔝 Top Header Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Admin Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="adminNameLabel"
                   text="Welcome, Admin"
                   style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- 📚 Sidebar Navigation -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER"
              prefWidth="250"
              style="-fx-background-color: #34495e; -fx-padding: 30;">

            <Button text="View Products" onAction="#handleViewProducts"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white; -fx-font-size: 16px;
                    -fx-pref-width: 200px; -fx-pref-height: 50px;
                    -fx-background-radius: 10; -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="View Orders" onAction="#handleViewOrders"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="View Customers" onAction="#handleViewCustomers"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="Add New Product" onAction="#handleAddProduct"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="Restock Product" onAction="#handleRestock"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="Sell Product" onAction="#handleSell"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="View Stock" onAction="#handleViewStock"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="Sales Report" onAction="#handleSalesReport"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />

            <Button text="Manage Employees" onAction="#handleManageEmployees"
                    style="-fx-background-color: #2980b9;
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-background-radius: 10;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);"
                    onMouseEntered="#hoverGlow" onMouseExited="#removeGlow"

            />
        </VBox>
    </left>

    <!-- 📋 Main Content Area -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #ecf0f1; -fx-padding: 40;"
                   prefWidth="1670" prefHeight="1020">
            <Label text="Select an option from the left menu"
                   style="-fx-font-size: 24px; -fx-text-fill: #7f8c8d;"/>
        </StackPane>
    </center>

</BorderPane>
