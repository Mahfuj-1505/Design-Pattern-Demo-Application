<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="520.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.RegisterController"
            style="-fx-background-color: linear-gradient(to bottom, #fdfbfb, #ebedee); -fx-padding: 20;">
   <children>

      <!-- Stylish Card -->
      <AnchorPane layoutX="30.0" layoutY="60.0" prefHeight="520.0" prefWidth="460.0"
                  style="-fx-background-color: rgba(255,255,255,0.9);
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #dee2e6;
                         -fx-border-width: 1.5;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0.5, 0, 4);">
         <children>

            <!-- Header -->
            <AnchorPane prefHeight="80.0" prefWidth="460.0"
                        style="-fx-background-color: linear-gradient(to right, #0f2027, #203a43, #2c5364);
                               -fx-background-radius: 18 18 0 0;">
               <children>
                  <ImageView fx:id="websiteLogo" fitHeight="40.0" fitWidth="70.0"
                             layoutX="20.0" layoutY="20.0"
                             pickOnBounds="true" preserveRatio="true" />
                  <Label layoutX="110.0" layoutY="26.0" text="Create Your Account" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Semibold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>

            <!-- Form Fields -->
            <Label layoutX="50.0" layoutY="100.0" text="First Name"
                   style="-fx-text-fill: #495057; -fx-font-size: 13px;" />
            <TextField fx:id="firstnameTextField" layoutX="50.0" layoutY="120.0"
                       prefHeight="36.0" prefWidth="360.0" promptText="First name"
                       style="-fx-background-color: #f1f3f5; -fx-background-radius: 10;
                              -fx-border-radius: 10; -fx-border-color: #ced4da;
                              -fx-font-size: 13px; -fx-padding: 0 12;" />

            <Label layoutX="50.0" layoutY="165.0" text="Last Name"
                   style="-fx-text-fill: #495057; -fx-font-size: 13px;" />
            <TextField fx:id="lastnameTextField" layoutX="50.0" layoutY="185.0"
                       prefHeight="36.0" prefWidth="360.0" promptText="Last name"
                       style="-fx-background-color: #f1f3f5; -fx-background-radius: 10;
                              -fx-border-radius: 10; -fx-border-color: #ced4da;
                              -fx-font-size: 13px; -fx-padding: 0 12;" />

            <Label layoutX="50.0" layoutY="230.0" text="Username"
                   style="-fx-text-fill: #495057; -fx-font-size: 13px;" />
            <TextField fx:id="usernameTextField" layoutX="50.0" layoutY="250.0"
                       prefHeight="36.0" prefWidth="360.0" promptText="Enter email or username"
                       style="-fx-background-color: #f1f3f5; -fx-background-radius: 10;
                              -fx-border-radius: 10; -fx-border-color: #ced4da;
                              -fx-font-size: 13px; -fx-padding: 0 12;" />

            <Label layoutX="50.0" layoutY="295.0" text="Password"
                   style="-fx-text-fill: #495057; -fx-font-size: 13px;" />
            <PasswordField fx:id="setPasswordField" layoutX="50.0" layoutY="315.0"
                           prefHeight="36.0" prefWidth="360.0" promptText="Password"
                           style="-fx-background-color: #f1f3f5; -fx-background-radius: 10;
                                  -fx-border-radius: 10; -fx-border-color: #ced4da;
                                  -fx-font-size: 13px; -fx-padding: 0 12;" />

            <Label layoutX="50.0" layoutY="360.0" text="Confirm Password"
                   style="-fx-text-fill: #495057; -fx-font-size: 13px;" />
            <PasswordField fx:id="ConfirmPasswordField" layoutX="50.0" layoutY="380.0"
                           prefHeight="36.0" prefWidth="360.0" promptText="Confirm Password"
                           style="-fx-background-color: #f1f3f5; -fx-background-radius: 10;
                                  -fx-border-radius: 10; -fx-border-color: #ced4da;
                                  -fx-font-size: 13px; -fx-padding: 0 12;" />

            <!-- Register Button -->
            <Button fx:id="registerButton" layoutX="130.0" layoutY="430.0"
                    mnemonicParsing="false" onAction="#handleRegisterButton"
                    prefWidth="200.0" prefHeight="40.0" text="Register"
                    style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0.3, 0, 2);" />

         </children>
      </AnchorPane>

      <!-- Log in Section -->
      <Label layoutX="160.0" layoutY="600.0" text="Already have an account?"
             style="-fx-font-size: 13px;" />
      <Button fx:id="loginButton" layoutX="185.0" layoutY="620.0"
              mnemonicParsing="false" onAction="#handleLoginButton"
              prefWidth="150.0" prefHeight="34.0" text="Log In"
              style="-fx-background-color: #6c757d;
                     -fx-text-fill: white;
                     -fx-font-size: 13px;
                     -fx-background-radius: 20;
                     -fx-cursor: hand;" />

   </children>
</AnchorPane>
