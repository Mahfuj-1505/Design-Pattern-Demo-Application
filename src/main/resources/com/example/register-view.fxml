<AnchorPane prefHeight="480.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.RegisterController">
   <children>
      <AnchorPane prefHeight="80.0" prefWidth="520.0" style="-fx-background-color: #007bff;">
         <children>
            <ImageView fx:id="websiteLogo" fitHeight="40.0" fitWidth="70.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true" />
            <Label layoutX="69.0" layoutY="32.0" text="User Registration" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="88.0" layoutY="98.0" text="First Name" />
      <TextField fx:id="firstnameTextField" layoutX="88.0" layoutY="114.0" prefHeight="23.0" prefWidth="355.0" promptText="First name" />
      <Label layoutX="88.0" layoutY="150.0" text="Last Name" />
      <TextField fx:id="lastnameTextField" layoutX="88.0" layoutY="165.0" prefHeight="23.0" prefWidth="355.0" promptText="Last name" />
      <Label layoutX="88.0" layoutY="200.0" text="Username" />
      <TextField fx:id="usernameTextField" layoutX="88.0" layoutY="216.0" prefHeight="23.0" prefWidth="355.0" promptText="Enter email or username" />
      <PasswordField fx:id="ConfirmPasswordField" layoutX="88.0" layoutY="318.0" prefHeight="23.0" prefWidth="355.0" promptText="Confirm Password" />
      <PasswordField fx:id="setPasswordField" layoutX="88.0" layoutY="266.0" prefHeight="23.0" prefWidth="355.0" promptText="Password" />
      <Label layoutX="88.0" layoutY="250.0" text="Password" />
      <Label layoutX="88.0" layoutY="301.0" text="Confirm Password" />
      <Button fx:id="registerButton" layoutX="148.0" layoutY="364.0" mnemonicParsing="false" onAction="#handleRegisterButton" prefWidth="200.0" style="-fx-background-color: #007bff;" text="Register" textFill="WHITE" />
      <Button fx:id="loginButton" layoutX="148.0" layoutY="424.0" mnemonicParsing="false" onAction="#handleLoginButton" prefWidth="200.0" style="-fx-background-color: #007bff;" text="Log In" textFill="WHITE" />
      <Label layoutX="148.0" layoutY="408.0" text="Already have an account?" />

      

   </children>
</AnchorPane>
