<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.controller.EmployeeDashboardController">

    <!-- 🔝 Top Header Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #294e90; -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Employee Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="employeeNameLabel" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Welcome, Employee" />
            <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;                            -fx-font-size: 14px; -fx-cursor: hand;" text="Logout" />
        </HBox>
    </top>

    <!-- 📚 Sidebar Navigation -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="250" spacing="15" style="-fx-background-color: #3c91ed; -fx-padding: 30;">

            <Button onAction="#handleViewProducts" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="View Products" />

            <Button onAction="#handleViewOrders" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="View Orders" />

            <Button onAction="#handleViewCustomers" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="View Customers" />

            <Button onAction="#handleRestock" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="Restock Product" />

            <Button onAction="#handleSell" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="Sell Product" />

            <Button onAction="#handleViewStock" onMouseEntered="#hoverGlow" onMouseExited="#removeGlow" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 50px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 4, 0.5, 0, 2);" text="View Stock" />
        </VBox>
    </left>

    <!-- 📋 Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" prefHeight="1020" prefWidth="1670" style="-fx-background-color: #ecf0f1; -fx-padding: 40;">
            <Label style="-fx-font-size: 24px; -fx-text-fill: #7f8c8d;" text="Select an option from the left menu" />
        </StackPane>
    </center>

</BorderPane>
