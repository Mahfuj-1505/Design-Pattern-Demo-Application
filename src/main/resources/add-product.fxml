<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.AddProductController"
            prefWidth="650" prefHeight="520"
            style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Card-style container -->
    <AnchorPane layoutX="100" layoutY="70" prefWidth="450" prefHeight="340"
                style="-fx-background-color: #fdfdfd;
                       -fx-border-radius: 12;
                       -fx-background-radius: 12;
                       -fx-border-color: #dcdcdc;
                       -fx-border-width: 1.5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0.3, 0, 2);">

        <!-- Vertical layout inside card -->
        <VBox spacing="14" layoutX="30" layoutY="30" prefWidth="390">
            <Label text="Add New Product"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <Label text="Product Name" style="-fx-font-size: 13px; -fx-text-fill: #495057;" />
            <TextField fx:id="nameField" promptText="Enter product name"
                       style="-fx-background-color: #f1f3f5;
                              -fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: #ced4da;
                              -fx-font-size: 13px;
                              -fx-padding: 8 12;" />

            <Label text="Price" style="-fx-font-size: 13px; -fx-text-fill: #495057;" />
            <TextField fx:id="priceField" promptText="Enter price"
                       style="-fx-background-color: #f1f3f5;
                              -fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: #ced4da;
                              -fx-font-size: 13px;
                              -fx-padding: 8 12;" />

            <Button text="Add Product" onAction="#handleAddProduct"
                    style="-fx-background-color: #2980b9;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 6, 0.3, 0, 2);" />

            <Label fx:id="statusLabel"
                   style="-fx-font-size: 13px; -fx-text-fill: #dc3545; -fx-padding: 5 0 0 0;" />
        </VBox>
    </AnchorPane>
</AnchorPane>
