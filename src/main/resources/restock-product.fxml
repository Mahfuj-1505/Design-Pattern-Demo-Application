<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.RestockProductController">
    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label text="Restock Product">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <HBox spacing="10">
        <Label text="Select Product:" />
        <ComboBox prefWidth="250" />
    </HBox>

    <HBox spacing="10">
        <Label text="Current Stock:" />
        <Label text="0" />
    </HBox>

    <HBox spacing="10">
        <Label text="Quantity to Add:" />
        <TextField promptText="Enter quantity" />
    </HBox>

    <Button text="Restock" />

    <Label textFill="green" />
</VBox>
