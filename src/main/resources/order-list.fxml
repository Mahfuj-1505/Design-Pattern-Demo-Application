<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="520" prefWidth="650" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.OrderListController">

    <!-- Card Container -->
    <AnchorPane layoutX="45" layoutY="40" prefHeight="420" prefWidth="560" style="-fx-background-color: #fdfdfd;                        -fx-background-radius: 12;                        -fx-border-radius: 12;                        -fx-border-color: #dcdcdc;                        -fx-border-width: 1.5;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0.3, 0, 2);">

        <!-- Orders Table -->
        <TableView fx:id="orderTable" layoutX="10" layoutY="10" prefHeight="900.0" prefWidth="1500.0" style="-fx-background-color: white;                           -fx-border-color: transparent;                           -fx-table-cell-border-color: #e0e0e0;                           -fx-table-header-border-color: #c8c8c8;                           -fx-font-size: 14px;                           -fx-text-fill: #333;                           -fx-padding: 8;">

            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100" style="-fx-font-weight: bold;" text="Order ID" />
                <TableColumn fx:id="customerIdColumn" prefWidth="120" style="-fx-font-weight: bold;" text="Customer ID" />
                <TableColumn fx:id="dateColumn" prefWidth="150" style="-fx-font-weight: bold;" text="Date" />
                <TableColumn fx:id="statusColumn" prefWidth="160" style="-fx-font-weight: bold;" text="Status" />
            </columns>
        </TableView>

        <!-- Optional Message Label -->
        <Label fx:id="messageLabel" layoutX="10" layoutY="380" prefWidth="540" style="-fx-text-fill: #dc3545; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </AnchorPane>
</AnchorPane>
